{
  "name": "xe_oneday_ng1_ts",
  "version": "1.0.0",
  "description": "XE OneDay NG1 + TS (Fake Umbraco JSON Server)",
  "main": "index.html",
  "scripts": {
    "clear:dist": "node_modules/.bin/rimraf 'App_Plugins/xeSample/backoffice/dist'",
    "copy:dist": "node_modules/.bin/copyfiles -f 'App_Plugins/xeSample/app/**/*.html' 'App_Plugins/xeSample/app/**/*.css' 'App_Plugins/xeSample/backoffice/dist'",
    "dist": "npm run clear:dist  &&  npm run copy:dist",
    "lint": "tslint  --config App_Plugins/xeSample/tslint.json  App_Plugins/xeSample/app/*.ts  App_Plugins/xeSample/app/**/*.ts",
    "prebuild": "npm run lint",
    "build": "tsc -w  -pretty  -p App_Plugins/xeSample",
    "preserve": "npm run dist",
    "serve": "node  node_modules/json-server/bin  --watch ./fake/db.json  --id Id  --routes ./fake/routes.json  --static ./",
    "start": "concurrent --kill-others 'npm run build' 'npm run serve'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmorosinotto/XE_OneDay_NG1xTS.git"
  },
  "keywords": [
    "Typescript",
    "Angular",
    "Umbraco"
  ],
  "author": "Daniele Morosinotto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dmorosinotto/XE_OneDay_NG1xTS/issues"
  },
  "homepage": "https://github.com/dmorosinotto/XE_OneDay_NG1xTS#readme",
  "devDependencies": {
    "copyfiles": "^0.2.1",
    "json-server": "^0.8.9",
    "rimraf": "^2.5.2",
    "tslint": "^3.8.1",
    "typescript": "^1.8.10"
  },
  "dependencies": {
    "angular": "^1.5.5",
    "ng-metadata": "^1.9.0",
    "reflect-metadata": "^0.1.3",
    "system-text": "^0.1.0",
    "systemjs": "^0.19.27",
    "systemjs-plugin-css": "^0.1.20"
  }
}
